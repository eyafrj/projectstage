@model IEnumerable<Portfolio.Models.Transaction>

@{
    ViewData["Title"] = "Executed Transactions";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
           
            <th>Order ID <i class="fas fa-box"></i></th>
            <th>Security <i class="fas fa-shield-alt"></i></th>
            <th>Account <i class="fas fa-user"></i></th>
            <th>Quantity <i class="fas fa-cube"></i></th>
            <th>Price <i class="fas fa-dollar-sign"></i></th>
            <th>Transaction Date <i class="fas fa-calendar-day"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
         
                <td>@transaction.OrderID</td>
                <td>@transaction.Security.SecurityName</td>
                <td>@transaction.Account.AccountName</td>
                <td>@transaction.Quantite</td>
                <td>@transaction.Price.ToString("F2")</td>
                <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>

