@model Portfolio.ViewModels.SecurityShareCreateViewModel

<form asp-action="CreateSecurityshares" method="post">
    <div class="form-group mb-3">
        <label asp-for="SecurityId" class="control-label">
            <i class="fas fa-archive"></i> Security
        </label>
        <select asp-for="SecurityId" asp-items="Model.Securities" class="form-control">
            <option value="">Select a Security</option>
        </select>
        <span asp-validation-for="SecurityId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantite" class="control-label">
            <i class="fas fa-sort-numeric-up"></i> Quantity
        </label>
        <input asp-for="Quantite" class="form-control" />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="AccountId" />

    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</form>
