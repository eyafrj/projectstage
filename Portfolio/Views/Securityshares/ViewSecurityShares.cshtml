@model IEnumerable<Portfolio.Models.SecurityShare>

@{
    ViewData["Title"] = "Security Shares";
}

<h2>Security Shares for Account @Model.FirstOrDefault()?.Account.AccountName</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-controller="SecurityShares" asp-action="CreateSecurityshares" asp-route-accountId="@Model.FirstOrDefault()?.AccountId">
        <i class="fas fa-plus"></i> New Security Share
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Security Name</th>
            <th>Quantity</th>
            <th>Account</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Security.SecurityName</td>
                <td>@item.Quantite</td>
                <td>@item.Account.AccountName</td>
                <td>
                    <a asp-action="Edit" asp-route-accountId="@item.AccountId" asp-route-securityId="@item.SecurityId" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="accountId" value="@item.AccountId" />
                        <input type="hidden" name="securityId" value="@item.SecurityId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this security share?');">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        @Html.AntiForgeryToken()
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-controller="Accounts" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Accounts
    </a>
</div>
