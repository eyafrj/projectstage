@model List<Portfolio.Models.Account>
@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-@(messageType == "success" ? "success" : "danger")">
        @message
    </div>
}
<h2 class="text-center mb-5">List of Accounts</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Accounts" asp-action="Create">
            <i class="fas fa-plus"></i> New Account
        </a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>AccountID</th>
            <th>AccountName</th>
            <th>AccountType</th>
            <th>TotalMarketValue</th>
            <th>CreatedDate</th>
            <th>ModifiedDate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountID</td>
                <td>@account.AccountName</td>
                <td>@account.AccountType</td>
                <td>@(account.TotalMarketValue)$</td>
                <td>@account.CreatedDate.ToString("MM/dd/yyyy")</td>
                <td>@account.ModifiedDate.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Accounts" asp-action="Ediit" asp-route-accountId="@account.AccountID">
                        <i class="fas fa-edit"></i> Edit
                    </a>

                    <a class="btn btn-danger btn-sm" asp-controller="Accounts" asp-action="Delete" asp-route-accountId="@account.AccountID">
                        <i class="fas fa-trash"></i> Delete
                    </a>

                    <a class="btn btn-info btn-sm" asp-controller="Securityshares" asp-action="ViewSecurityShares" asp-route-accountId="@account.AccountID">
                        <i class="fas fa-eye"></i> View SecurityShares
                    </a>

                  
                </td>
            </tr>
        }
    </tbody>
</table>
